<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Arabic language Testing Suite">
    <test name="Test Setup">
        <parameter name="appPath" value="src/app-production-release.apk"></parameter>
        <parameter name="language" value="Arabic"/>
        <parameter name="platform" value="mobile"/>
        <parameter name="branch" value="Production"></parameter>
        <parameter name="browser" value="chrome"></parameter>
        <parameter name="url" value="none"></parameter>

        <classes>
            <class name="Base.SetupTest"/>
            <class name="Mobile.Tests.Language.LanguageChooseTest"></class>
            <class name="Mobile.Tests.HomePage.HomePageTest"></class>
            <class name="Mobile.Tests.MyConversations.MyConversationsTest"></class>
            <class name="Mobile.Tests.SupportGroup.SupportGroupsTest"></class>
            <class name="Mobile.Tests.BenchmarksPage.BenchmarksTest"></class>
            <class name="Mobile.Tests.MorePage.MorePageTest"></class>

        </classes>
    </test>
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
        <listener class-name="Listeners.Listener"></listener>
    </listeners>
</suite>
